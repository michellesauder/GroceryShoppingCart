@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <hr />

        Please Insert Your Name:
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="firstName" class="form-control" />
            <span asp-validation-for="firstName" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>

        <hr />
        @if (ViewBag.UserName != null)
        {
            @Html.Raw("<h1>Welcome " + ViewBag.UserName + "</h1>");
        }

    </div>
</div>

@Html.ActionLink("Clear",                 // Text
                    "ClearCookie",        // Method
                    "Home", new { key = "firstName" })

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/apples.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    You Can Start Your Grocery List Here
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/grocery_store.jpeg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    When you are done with your grocery list you can take that list and head to the grocery store or have the items delivered.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/pyramid.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Check Out Items here!
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Uses</h2>
    </div>
    <div class="col-md-3">
        <h2>Lists</h2>
    </div>
    <div class="col-md-3">
        <h2>Overview</h2>
    </div>
    <div class="col-md-3">
        <h2>Run &amp; Check Out</h2>
    </div>
</div>

@model GroceryShoppingCart.ViewModels.UserVM

@{
    ViewData["Title"] = "IndexCookie";
}


<hr />






<div>
    <a asp-action="Index">Back to List</a>
</div>

